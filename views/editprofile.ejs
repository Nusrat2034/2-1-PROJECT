<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Form</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
           background-image: url('https://cdn.mos.cms.futurecdn.net/6c3s8rMup3oTAUKywn4UTT.jpg');
       }
    </style>
</head>
<body class="bg-gray-200 flex items-center justify-center h-screen">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-sm">
        <h2 class="text-2xl font-bold mb-6 text-gray-700">Edit form</h2>
        <form id="editForm" class="space-y-4">
            <div>
                <label class="text-gray-600 font-semibold" for="gmail">Gmail</label>
                <input type="email" id="gmail" name="gmail" placeholder="user@gmail.com" class="w-full mt-1 p-2 border rounded" required>
            </div>
            <div>
                <label class="text-gray-600 font-semibold" for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" class="w-full mt-1 p-2 border rounded" required>
            </div>
            <div>
                <label class="text-gray-600 font-semibold" for="street">Street</label>
                <input type="text" id="street" name="street" placeholder="street" class="w-full mt-1 p-2 border rounded" required>
            </div>
            <div>
                <label class="text-gray-600 font-semibold" for="city">City</label>
                <input type="text" id="city" name="city" placeholder="city" class="w-full mt-1 p-2 border rounded" required>
            </div>
            <div>
                <label class="text-gray-600 font-semibold" for="country">Country</label>
                <input type="text" id="country" name="country" placeholder="country" class="w-full mt-1 p-2 border rounded" required>
            </div>
            <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600">SAVE</button>
        </form>        
    </div>
    <script>
   document.getElementById('editForm').addEventListener('submit', async function(event) {
    event.preventDefault();
    const formData = new FormData(this);
    const formDataObj = {};
    formData.forEach((value, key) => { formDataObj[key] = value; });

    try {
        const response = await fetch('/save', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(formDataObj),
        });
        const data = await response.json();
        alert(data.message);
    } catch (error) {
        console.error('Error updating profile:', error);
        alert('An error occurred while updating profile.');
    }
});

    </script>    
</body>
</html>